<%= form_tag(login_path, html: {class: "navbar-form navbar-right", role: "search"}) do %>
    <div class="form-group"><%= text_field_tag "email", nil, placeholder: "email", class: 'form-control' %></div>
    <div class="form-group"><%= password_field_tag "password", nil, placeholder: "password", class: "form-control" %></div>
	<%= submit_tag :login, class: "btn btn-default"  %>
<% end %>

<%= link_to "Create Account", new_user_path %>
