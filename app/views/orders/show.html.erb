<div class="col-md-10 col-md-offset-1">
	<div class="panel panel-default">
    <div class="panel-heading"><h1>Completed Order</h1></div>
      <div class="panel-body">
         <table class="table">
            <thead>
              <tr class="success">
                <th>Items</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Item Total</th>
              </tr>
            </thead>
            <tbody>
              <% cart.items_to_quantities.each do |item, quantity| %>
                <tr>
                  <td><%= link_to item.title, item_path(item) %></td> 
                  <td><%= quantity %></td>
                  <td><%= print_price(item.price) %></td>
                  <td><%= print_price(item.price * quantity)%></td> 
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="well">
        <table class="table">
          <h3>Order Summary</h3>
          <tr class="success">
            <th>Order Status</th>
            <th>Exchange</th>
            <th>Order Total</th>
          </tr>
          <tbody>
          <tr class="warning">
            <td><h4><%= @order.status.capitalize %></h4></td>
            <td><h4><%= @order.exchange.capitalize %></h4></td>
            <td><h4><%= print_price(order_price(@order.items)) %></h4></td>
          </tr>
        </table>
      </div>
      </div>
      </div>
	</div>
</div>
