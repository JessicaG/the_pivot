<div class="row">
  <div class="col-md-10 col-md-offset-1">
  <% @order.errors.full_messages.each do |m| %>
    <%= m %>
  <% end %>
  <h2>Billing Address</h2>
  <div class="container confirmation-container">
    <%= form_for @order do |f|%>
        
        <%= f.label :street_number %>
        <%= f.text_field :street_number %>

      	<%= f.label :street %>
      	<%= f.text_field :street %>

      	<%= f.label :city %>
      	<%= f.text_field :city %>

      	<%= f.label :state %>
      	<%= f.text_field :state %>

      	<%= f.label :zip %>
      	<%= f.text_field :zip %>

      	<%= f.hidden_field :status %>
      	<%= f.hidden_field :latitude, value: session[:latitude] %>
      	<%= f.hidden_field :longitude, value: session[:longitude] %>

      	<%= f.label "Pickup or Delivery?" %>
        <%= f.select :exchange, ['pickup', 'delivery'], :selected => 'pickup' %><br/>
    	<%= f.submit class: "btn btn-lg btn-grey1"%>
    <% end %>
  </div>
  </div>
</div>

