<h1>Your Cart</h1>
<ul>
  <% cart.items_to_quantities.each do |item, quantity| %>
    <div id='<%= "item_#{item.id}" %>'>
      <li><%= item.title %>
      <li><%= item.description %>
        <%= form_tag(cart_update_quantity_path(item), method: :patch, remote: true, style: 'display:inline;') do %>
          <%= number_field_tag "quantity", quantity, min: 0, class: "text-size" %>
          <%= submit_tag "update quantity", class: "btn btn-grey3 btn-sm", id: 'update_quantity' %>
        <% end %>
        <%= form_tag(cart_remove_item_path(item), method: :patch, remote: true, style: 'display:inline;') do %>
          <span class="glyphicon glyphicon-remove"></span>
          <%= submit_tag 'remove item', class: "btn btn-grey2 btn-sm", id: "remove_item" %>
        <% end %>
    </div>
  <% end %>
</ul>

<%= link_to 'Clear My Cart', cart_destroy_path, method: :delete, class: "btn btn-grey4 btn-sm" %>

<%= link_to @cart_presenter.checkout_label, @cart_presenter.checkout_path.to_sym, class: "btn btn-grey3 btn-sm" %>
