<h1>Your Cart</h1>
<ul>
  <% @cart.each do |items| %>
    <% item = items.first %>
    <div id='<%= "item_#{item.id}" %>'>
      <li><%= item.title %>
      <li><%= item.description %>
        <%= number_field_tag 'Quantity', items.count %>
        <%= form_tag(cart_remove_item_path(item.id), method: :patch, id: "remove_item", remote: true) do %>
          <span class="glyphicon glyphicon-remove"></span>
          <%= submit_tag 'remove item', class: "btn btn-default btn-sm" %>
        <% end %>
    </div>
  <% end %>
</ul>

<%= link_to 'clear my cart', cart_destroy_path, method: :delete %> 
