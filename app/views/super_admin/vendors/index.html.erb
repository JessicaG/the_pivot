<h1>New Vendor Requests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>URL</th>
      <th>Approved?</th>
    </tr>
  </thead>
  <tbody>
      <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.description %></td>
        <td><%= vendor.slug %></td>
        <!-- <td>
          <form action="javascript:select();" >
            <input id="active" type="submit" name="active" value="Yes" />
          </form>
         </td> -->
        <td><%= link_to "#{vendor.approved}", edit_super_admin_vendor_path(vendor), class: "btn btn-primary btn-sm active" %></td>
        <td>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
