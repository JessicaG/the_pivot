var category_link = $("#<%= @category %>");
var dark = "rgb(192, 192, 192)";
var light = 'rgb(84, 84, 84)';

if (category_link.css('background-color') == light) {
  category_link.css('background-color', dark);
  $(".grid-item").not(".<%= @category %>").each(function() {
    $(this).show();
  });
  msnry.layout();
} else {
  category_link.css('background-color', light);
  $(".grid-item").not(".<%= @category %>").each(function() {
    $(this).hide();
  });
  msnry.layout();
}
